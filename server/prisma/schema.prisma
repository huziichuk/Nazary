generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String             @id @default(cuid())
  email             String             @unique
  password          String
  isConfirmed       Boolean            @default(false)
  confirmToken      String?
  name              String?
  notes             Note[]
  salt              String
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  sessions          Session[]
  VerificationCodes VerificationCode[]
}

model Note {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  titleCipher   String
  titleNonce    String
  contentCipher String
  contentNonce  String
  tagsCipher    String
  tagsNonce     String

  blindTokens String[] @default([])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  isFavorite Boolean @default(false)

  @@index([userId, updatedAt])
  @@index([blindTokens], type: Gin)
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token     String
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model VerificationCode {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      CodeType
  code      String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
}

enum CodeType {
  PASSWORD_RESET
}
